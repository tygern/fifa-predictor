<div class="container">
  <% unless notice.nil? %>
    <section>
      <%= notice %>
    </section>
  <% end %>

  <section>
    <h1>Teams</h1>

    <div class="cards">
      <% @teams.each do |team| %>
        <div class="card team">
          <div class="badge" style="background-color: <%= team.badge_color %>"><%= team.badge_label %></div>
          <%= link_to team.name, edit_team_path(team.id), class: "name" %>
          <%= link_to "Ã—", team_path(team.id), class: "delete", data: { "turbo-method": :delete, "turbo-confirm": "are you sure" } %>
        </div>
      <% end %>
    </div>
  </section>

  <section>
    <h2>New team</h2>
    <%= render "form", team: @team %>
  </section>
</div>
