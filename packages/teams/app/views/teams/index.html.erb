<div class="container">
  <% unless notice.nil? %>
    <section>
      <%= notice %>
    </section>
  <% end %>

  <section>
    <h1>Teams</h1>

    <ul>
      <% @teams.each do |team| %>
        <li><%= link_to team.name, edit_team_path(team) %>
          (<%= link_to "Delete", team, data: { "turbo-method": :delete, "turbo-confirm": "are you sure" } %>)
        </li>
      <% end %>
    </ul>
  </section>

  <section>
    <h2>New team</h2>
    <%= render "form", team: @team %>
  </section>
</div>
